<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ON state -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Track -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <solid android:color="#4CAF50"/>
                    <size android:width="40dp" android:height="80dp"/>
                </shape>
            </item>
            <!-- Knob at bottom (ON = sliding up) -->
            <item android:bottom="4dp" android:left="4dp" android:right="4dp">
                <shape android:shape="oval">
                    <solid android:color="#FFFFFF"/>
                    <size android:width="32dp" android:height="32dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- OFF state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <solid android:color="#B0BEC5"/>
                    <size android:width="40dp" android:height="80dp"/>
                </shape>
            </item>
            <!-- Knob at top -->
            <item android:top="4dp" android:left="4dp" android:right="4dp">
                <shape android:shape="oval">
                    <solid android:color="#FFFFFF"/>
                    <size android:width="32dp" android:height="32dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
